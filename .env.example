# Database
DATABASE_URL=postgresql://bench_user:bench_pass@localhost:5432/ai_knowledge_bench
PGVECTOR_EXTENSION=enabled

# If your host already has PostgreSQL on 5432, change this to e.g. 5433
POSTGRES_HOST_PORT=5432

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_INGEST=document.ingest.requested
KAFKA_TOPIC_REINDEX=document.reindex.requested
KAFKA_CONSUMER_GROUP=worker_ingest

# Redis
REDIS_URL=redis://localhost:6379/0

# vLLM
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_API_KEY=EMPTY
VLLM_MODEL=Qwen/Qwen2.5-0.5B-Instruct

# Mainland-friendly mirrors (used by Docker builds via docker compose build args)
# You can override these when building images, e.g.:
# PIP_INDEX_URL=https://mirrors.aliyun.com/pypi/simple
# PIP_TRUSTED_HOST=mirrors.aliyun.com
PIP_INDEX_URL=https://pypi.tuna.tsinghua.edu.cn/simple
PIP_TRUSTED_HOST=pypi.tuna.tsinghua.edu.cn

# Optional: if you still need Hugging Face, you can set a mirror endpoint here.
# HF_ENDPOINT=https://hf-mirror.com

# Debian apt mirror for Docker builds (used by Dockerfiles)
APT_MIRROR=mirrors.tuna.tsinghua.edu.cn

# Embeddings
EMBEDDING_MODEL=intfloat/multilingual-e5-small
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Application
APP_HOST=0.0.0.0
APP_PORT=8080
APP_LOG_LEVEL=INFO
APP_UPLOAD_DIR=/app/data/uploads

# Chunking defaults
DEFAULT_CHUNK_SIZE=512
DEFAULT_CHUNK_OVERLAP=128

# Retrieval defaults
DEFAULT_TOP_K=5
DEFAULT_SIMILARITY_THRESHOLD=0.7

# Evaluation
EVAL_SEMANTIC_SIMILARITY_THRESHOLD=0.75
